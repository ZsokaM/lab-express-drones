<h2>Update the drone</h2>

<form action="/drones/{{drone.id}}/edit" method="POST">
  <label>
    Name:
    <input type="text" name="name" value="{{drone.name}}" />
  </label>
  
  <label>
    Number of propellers:
    <input type="number" name="propellers" min="1" value="{{drone.propellers}}" />
  </label>
 
  <label>
    Maximum speed:
    <input type="number" name="maxSpeed" min="1" value="{{drone.maxSpeed}}" />
  </label>
 
  <button>Save changes</button>
</form>
